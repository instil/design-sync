{
  "name": "design-sync",
  "version": "1.0.3",
  "description": "Syncing a figma design system into code via a 'pull' model",
  "homepage": "https://github.com/instil/design-sync",
  "author": "neil.armstrong@instil.co",
  "license": "MIT",
  "main": "build/src/SyncFigmaWithoutIcons.js",
  "types": "build/src/Types.d.ts",
  "files": [
    "build/**"
  ],
  "bin": {
    "figma-sync": "./build/src/SyncFigmaWithoutIcons.js",
    "figma-sync:withIcons": "./build/src/SyncFigmaWithIcons.js"
  },
  "scripts": {
    "build": "yarn checks && yarn compile",
    "checks": "yarn lint && yarn test",
    "lint": "yarn eslint --max-warnings=0 \"./src/**/*.{ts,tsx}\"",
    "test": "yarn jest --passWithNoTests",
    "publish": "yarn package && yarn npm publish",
    "package": "yarn compile && yarn npm-pack-all --output package.tgz",
    "compile": "yarn compile:typescript && yarn compile:copyAssets",
    "compile:typescript": "rm -rf ./build && yarn ttsc --p ./tsconfig.json",
    "compile:copyAssets": "cp -r ./scss-helpers ./build/scss-helpers",
    "sync": "yarn ts-node -r tsconfig-paths/register src/SyncFigmaWithoutIcons.ts",
    "sync:icons": "yarn ts-node -r tsconfig-paths/register src/SyncFigmaWithIcons.ts"
  },
  "dependencies": {
    "axios": "0.27.2",
    "figma-api": "1.10.1",
    "lodash": "4.17.21",
    "style-dictionary": "3.7.1"
  },
  "devDependencies": {
    "@types/jest": "27.5.1",
    "@types/lodash": "4.14.182",
    "@types/node": "17.0.10",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.12.0",
    "eslint": "8.21.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "26.4.5",
    "eslint-plugin-no-relative-import-paths": "1.3.3",
    "jest": "28.1.0",
    "npm-pack-all": "1.12.7",
    "ts-jest": "28.0.3",
    "ts-node": "10.8.1",
    "tsconfig-paths": "4.0.0",
    "ttypescript": "1.5.13",
    "typescript": "4.7.2",
    "typescript-transform-paths": "3.3.1"
  }
}
